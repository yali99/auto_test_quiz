<?xml version="1.0" encoding="UTF-8"?>
<extent>
    <spark>
        <!-- 保持您现有的配置不变 -->
        <reportName>自动化测试报告</reportName>
        <documentTitle>员工报销测试报告</documentTitle>
        <encoding>UTF-8</encoding>
        <timeStampFormat>yyyy-MM-dd HH:mm:ss</timeStampFormat>
        <theme>STANDARD</theme>

        <!-- 新增：失败处理配置 -->
        <enableOfflineMode>true</enableOfflineMode>
        <timelineEnabled>true</timelineEnabled>
        <viewOrder>BARS, TEST, EXCEPTION, AUTHOR, DEVICE, LOG</viewOrder>

        <!-- 确保失败场景也显示 -->
        <showTestRunnerLogs>true</showTestRunnerLogs>
        <enableExceptionView>true</enableExceptionView>
    </spark>
</extent>